// 7. Equality
const stringFive = '5';
const numberFive = 5;

// == loose equality, with type conversion : type ë³€ê²½í•´ì„œ ê²€ì‚¬í•¨(ê°’ ìì²´ ë¹„êµ)
console.log(stringFive == numberFive);
console.log(stringFive != numberFive);

// === strick equality, no type conversion : type ì‹ ê²½ì¨ì„œ ê²€ì‚¬í•¨(ê¶Œì¥)
console.log(stringFive === numberFive);
console.log(stringFive !== numberFive);

// object equality by reference
const mika1 = {name: 'mika'};
const mika2 = {name: 'mika'};
const mika3 = mika1;
console.log(mika1 == mika2); // ref(ì£¼ì†Œê°’)ì´ ë‹¬ë¼ì„œ false
console.log(mika1 === mika2); // ref(ì£¼ì†Œê°’)ì´ ë‹¬ë¼ì„œ false
console.log(mika1 === mika3); // ref(ì£¼ì†Œê°’)ì´ ê°™ì•„ì„œ true

// equality - puzzler
console.log(0 == false); // t
console.log(0 === false); // f typeì´ boolean ì•„ë‹˜
console.log('' == false); // t
console.log('' === false); // f typeì´ boolean ì•„ë‹˜
console.log(null == undefined); // t
console.log(null === undefined); // f typeì´ boolean ì•„ë‹˜

// 8. Conditional operators : if
// if, else if, else
const name = 'df';
if(name === 'mika'){
    console.log('Welcom, Mika');
} else if(name === 'coder'){
    console.log('You are amazing coder');
} else {
    console.log('nuknown');
}

// 9. Ternary operator: ?  ì‚¼í•­ì—°ì‚°ì
// condition ? value1 : value2;
console.log(name === 'mika' ? 'yes' : 'no');

// 10. Switch statemnet
// use for multiple if checks
// use for enum-like value check
// use for multiple type checks in TS
const browser = 'IE';
switch(browser){
    case 'IE':
        console.log('go away!');
        break;
    case 'Chrome':
    case 'Firefox':
        console.log('like you!');
        break;
    default:
        console.log('same all!');
        break;
    
}

// 11. Loops
// while loops, while the condition is truthy,
// body code is executed.
let i = 3;
while(i > 0){
    console.log(`while: ${i}`);
    i--;
}

// do while loop, body code is executed first,
// then check the condition.
do {
    console.log(`do while: ${i}`);
    i--;
} while(i > 0);

// for loop, for(begin; condition; step)
for(i = 3; i > 0; i--){
    console.log(`for: ${i}`);
}

for(let i = 3; i > 0; i = i -2){
    //inline variable declaration
    console.log(`inline variable for: ${i}`);
}

// nested loops : loop ê²¹ì³ì„œ ì“°ê¸° -> big Oê°€ nì˜ 2ì´ë¼ cpuì— ì¢‹ì§€ ì•Šì•„ì„œ í”¼í•˜ëŠ”ê²Œ ì¢‹ìŒ
for(let i = 0; i < 10; i++){
    for(let j = 0; j < 10; j++){
        console.log(`i: ${i}, j: ${j}`);
    }
}

// break, continue
// Q1. iterate form 0 to 10 and print only even numbers(use continue)
for(let i = 0; i < 11; i++){ // 10ê¹Œì§€ ì²´í¬í•´ì•¼ í•˜ë‹ˆê¹Œ 11ê¹Œì§€ ëŒì•„ì•¼í•¨
    if(i%2 !== 0){
        continue;   
    }
    console.log(`q1: ${i}`); // ì›í•˜ëŠ” ê°’ì´ ë‚˜ì˜¬ë•Œë§Œ ì¶œë ¥í•˜ëŠ” ë°©ë²•ì´ ë” íš¨ìœ¨ì 
}

// Q2. iterate from 0 to 10 and print numbers util reaching 8(use break)
for(let i = 0; i < 11; i++){
    if(i === 8){
        break;
    }
    console.log(`q2: ${i}`);
}

